        },
        "image_url": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "outlet_price": {
          "type": "number",
          "format": "double"
        },
        "retail_discount": {
          "type": "number",
          "format": "double"
        },
        "retail_discount_price": {
          "type": "number",
          "format": "double"
        },
        "retail_price": {
          "type": "number",
          "format": "double"
        },
        "retail_url": {
          "type": "string"
        },
        "sku": {
          "type": "integer",
          "format": "uint64"
        }
      }
    },
    "WishlistResponse": {
      "description": "WishlistResponse contains response information that will be returned to the request issuer",
      "headers": {
        "example_image": {
          "type": "string"
        },
        "id": {
          "type": "integer",
          "format": "uint64",
          "description": "ID is the unique id of the wishlist"
        },
        "item_skus": {
          "type": "array",
          "items": {
            "type": "integer",
            "format": "uint64"
          },
          "description": "Items added to this wishlist"
        },
        "name": {
          "type": "string",
          "description": "Name for the wishlist"
        }
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
